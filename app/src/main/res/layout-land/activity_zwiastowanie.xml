<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Zwiastowanie" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/tajemnica_i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:layout_marginTop="40dp"
                    android:textSize="18sp" android:textColor="#039BE5" android:textAlignment="center"/>
            <TextView
                    android:text="@string/zwiastowanie_naj_wi_tszej"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp" android:textSize="18sp"
                    android:textColor="#039BE5" android:textAlignment="center"/>
            <TextView
                    android:text="@string/marii_pannie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:textColor="#039BE5" android:textSize="18sp"
                    android:textAlignment="center"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/zwiastowanie_obraz"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="16dp"/>
            <Button
                    android:text="@string/wst_p"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:id="@+id/button_Zwiastowanie_Wstep"
                    android:background="#90CAF9"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center" android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>