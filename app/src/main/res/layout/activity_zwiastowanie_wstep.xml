<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="Zwiastowanie-Wstęp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Jeśli mam przez cały miesiąc udawać się duchowo do miejsca, w którym dokonało się zwiastowanie Najświętszej Maryi Pannie, spotkać się tam z Chrystusem i Maryją, to najpierw muszę się gorliwie modlić o łaskę takiego przeżywania tej tajemnicy. Nie potrafię o własnych siłach wniknąć w głębię Bożych spraw. Potrzebuję prowadzenia przez Boga."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="Z tej racji pierwsze dni miesięcznej modlitwy i medytacji są prośbą o łaskę głębszego wniknięcia w znaczenie zbawczych wydarzeń, jakie dokonały się w chwili, gdy Anioł przyszedł do Maryi i oznajmił Jej Bożą wolę"
                    android:id="@+id/textView7"
                    style="@style/paragraf_Text"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
