<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Swiatla"
        android:background="#FFFFFF">

    <TextView
            android:text="@string/tajemnice_wiat_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Radosne1"
            android:textSize="20sp"
            android:textColor="@color/colorGreen"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/ikonaswiatla"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Radosne1"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.129"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/jordan"
            android:id="@+id/button_Jordan"
            style="@style/button_swiatla_tajemnice"
            android:layout_width="150sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_Narodzenie"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="@string/kana"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Kana"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button_Ofiarowanie"/>
    <Button
            android:text="@string/narodzenie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Narodzenie"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintTop_toBottomOf="@+id/button_Jordan"
            app:layout_constraintBottom_toTopOf="@+id/button_Odnalezienie"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="@string/ofiarowanie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Ofiarowanie"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintTop_toBottomOf="@+id/button_Kana"
            app:layout_constraintBottom_toTopOf="@+id/button_Rekolekcje_Radosne"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="@string/odnalezienie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Odnalezienie"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_Narodzenie"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            />
    <Button
            android:text="@string/rekolekcje"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Rekolekcje_Radosne"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_Ofiarowanie"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            />
</android.support.constraint.ConstraintLayout>