<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="Dzień 11. Niech mi się stanie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView175"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView175"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Różańcowa modlitwa w minionym tygodniu odwoływała się do ewangelicznego opisu rozmowy Maryi z Aniołem. Dziś jej zakończenie. To słowa Maryi wyrażające gotowość przyjęcia wszystkiego, co Bóg Jej proponuje i daje."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView176"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="@string/modlitwa"
                    android:id="@+id/textView177"
                    style="@style/modlitwa"/>
            <TextView
                    android:text="@string/bo_e_m_j_ojcze_niech_pocieszyciel_duch_wi_ty_kt_ry_pochodzi_od_ciebie_o_wieci_m_j_umys_i_doprowadzi_mnie_do_pe_nej_prawdy_zgodnie_z_obietnic_twego_syna"
                    android:id="@+id/textView178"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="@string/rozwa_anie_s_owa"
                    android:id="@+id/textView179"
                    style="@style/rozwazanie_slowa"/>

            <TextView
                    android:text="Z Ewangelii według św. Łukasza (1,38): „Na to rzekła Maryja: «Oto Ja służebnica Pańska, niech Mi się stanie według twego słowa!» Wtedy odszedł od Niej anioł”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView180"/>
            <TextView
                    android:text="Św. Jan Paweł II wyjaśniając słowa Maryi pisze: „Przy zwiastowaniu Maryja, okazując «posłuszeństwo wiary» Temu, który przemawiał do Niej słowami swego zwiastuna, poprzez «pełną uległość rozumu i woli wobec Boga objawiającego» – w pełni powierzyła się Bogu. Odpowiedziała więc całym swoim ludzkim, niewieścim «ja». Zawierało się w tej odpowiedzi wiary doskonałe współdziałanie «z łaską Bożą uprzedzającą i wspomagającą» oraz doskonała wrażliwość na działanie Ducha Świętego, który «darami swymi wiarę stale udoskonala» [...]. Maryja «całkowicie poświęciła samą siebie, jako służebnicę Pańską, osobie i dziełu swego Syna». Syna tego zaś – jak uczą Ojcowie pierwej poczęła duchem niż ciałem: właśnie przez wiarę! Słusznie przeto sławi Maryję Elżbieta: «Błogosławiona jesteś, któraś uwierzyła, że spełnią się słowa powiedziane Ci od Pana»”."
                    android:id="@+id/textView181"
                    style="@style/paragraf_Text_optimum"/>

            <TextView
                    android:text="@string/dziesi_tek_r_a_ca"
                    android:id="@+id/textView182"
                    style="@style/dziesiatek_rozanca"/>

            <TextView
                    android:text="Zwracam się do Ojca niebieskiego, który wybrał Maryję na Matkę swego Syna. Zwracam się w dziesiątku różańca do Maryi rozważając odpowiedź, jakiej Ona udzieliła Bogu. Uwieńczeniem tego przeżycia jest śpiew uwielbienia: „Chwała Ojcu...”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView183"/>


            <TextView
                    android:text="@string/intencje_modlitwy"
                    android:id="@+id/textView184"
                    style="@style/intencje_modlitwy"/>

            <TextView
                    android:text="Umocnij mnie, Panie, abym za przykładem Maryi zawsze ukazywał Ci posłuszeństwo wiary. Niech spłynie na mnie i na wszystkich ludzi błogosławieństwo przeznaczone dla tych, którzy uwierzyli."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView185"/>

            <TextView
                    android:text="@string/prosz_w_intencjach_kt_re_poleca_ojciec_wi_ty"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView186"/>
            <TextView
                    android:text="@string/dzi_kuj_maryi_a_wraz_z_ni_bogu_za_dar_spotkania_i_za_wszystkie_otrzymane_aski"
                    android:id="@+id/textView187"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="80sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>