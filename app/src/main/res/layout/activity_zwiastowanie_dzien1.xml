<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="DZIEŃ 1. Modlitwa do Ojca."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Wszystkie zbawcze wydarzenia mają swe źródło w miłości Ojca. To On posłał Syna, a Syn wypełniał Jego wolę. Zwracam się więc najpierw do mojego Ojca w niebie."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="Modlitwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>
            <TextView
                    android:text="Ojcze najlepszy, pomóż mi zobaczyć Twoją ojcowską miłość, objawioną w tajemnicy Wcielenia Twego Syna. Twoja troska o każdego człowieka, także o mnie, skłoniła Cię do dokonania dzieła okupienia. Ty posyłasz Anioła do Maryi, by Jej zwiastował dobrą nowinę. Ku Tobie więc kieruję dziś moje oczy, moje serce i moją modlitwę. Zgodnie z zaleceniem Jezusa wchodzę do izdebki, zamykam drzwi, by rozmawiać z Tobą, moim Ojcem."
                    android:id="@+id/textView31"
                    style="@style/paragraf_Text"/>
            <TextView
                    android:text="Rozważanie słowa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Z listu św. Pawła Apostoła do Galatów (4,6-7): „Na dowód tego, że jesteście synami, Bóg wysłał do serc naszych Ducha Syna swego, który woła: «Abba, Ojcze!» A zatem nie jesteś już niewolnikiem, lecz synem. Jeżeli zaś synem, to i dziedzicem z woli Bożej”."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"/>
            <TextView
                    android:text="Rozważam tajemnicę Zwiastowania jako syn Boga, jako Jego dziecko, jako ktoś, kto już otrzymał udział w życiu Ojca niebieskiego. Odmawiając dziesiątek różańca wpatruję się w kochające oczy Ojca. One patrzą na mnie. Jestem tego świadom. Ta prawda mnie przenika, raduje i daje siły do skupienia. Ja również chce ku Niemu skierować całą swoją uwagę. Dzisiejszą modlitwę pragnę przeżyć jako spotkanie z moim Ojcem, który z miłości ku mnie posyła Anioła do Maryi i rozpoczyna realizację zapowiedzianego dzieła zbawienia."
                    android:id="@+id/textView34"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Dziesiątek różańca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView35"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="W każdym wezwaniu modlitwy „Ojcze nasz” pragnę zwracać się całym sercem ku Ojca."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView36"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"/>


            <TextView
                    android:text="W odmawianiu kolejnych „Zdrowaś Maryjo” chcę rozważać cytowane powyżej słowa z listu do Galatów. Nie jestem już niewolnikiem. Jestem dzieckiem. Mogę mówić: „Abba, Ojcze”. Czynię to z Maryją."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView37"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"/>
            <TextView
                    android:text="Moje „Chwała Ojcu...” będzie szczerym uwielbieniem Trójcy Przenajświętszej za tajemnicę Wcielenia Syna Bożego."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView38"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"/>
            <TextView
                    android:text="Intencje modlitwy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView39"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Będąc blisko Ojca, doświadczając mocniej Jego miłości, mogę z tym większą wiarą przedstawić Mu intencje modlitwy. Modlę się przez wstawiennictwo Maryi."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView40"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"/>

            <TextView
                    android:text="Proszę najpierw, aby wszyscy ochrzczeni mocniej uwierzyli, że Ojciec ich miłuje i dokonuje dzieła zbawienia z miłości ku nim."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView41"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"/>
            <TextView
                    android:text="Proszę w intencjach, które poleca Ojciec Święty."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView42"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"/>
            <TextView
                    android:text="Kończę modlitwę dziękczynieniem za dar spotkania, które jest zawsze zaszczytem i wyróżnieniem. Rozmawiałem z Bogiem i rozważałem Jego boskie tajemnice."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView43"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
