<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="DZIEŃ 10. Duch zstąpi na Ciebie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView162"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView107"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Także dziś chcę być z Maryją w Jej przeżyciu tajemnicy Zwiastowania. Wsłuchuję się w Jej słowa i w odpowiedź, jakiej udziela Jej Anioł Gabriel."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView163"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="Modlitwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView164"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>
            <TextView
                    android:text="Boże, mój Ojcze, niech Pocieszyciel, Duch Święty, który pochodzi od Ciebie, oświeci mój umysł i doprowadzi mnie do pełnej prawdy, zgodnie z obietnicą Twego Syna."
                    android:id="@+id/textView165"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="Rozważanie słowa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView166"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Z Ewangelii według św. Łukasza (1,34-37): „Na to Maryja rzekła do anioła: «Jakże się to stanie, skoro nie znam męża?» Anioł Jej odpowiedział: «Duch Święty zstąpi na Ciebie i moc Najwyższego osłoni Cię. Dlatego też Święte, które się narodzi, będzie nazwane Synem Bożym. A oto również krewna Twoja, Elżbieta, poczęła w swej starości syna i jest już w szóstym miesiącu ta, która uchodzi za niepłodną. Dla Boga bowiem nie ma nic niemożliwego»”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView167"/>
            <TextView
                    android:text="Pytanie Maryi jest bardzo ważne. Ona nie mówi: „To niemożliwe”. Chce tylko wiedzieć, jak ma się spełnić zapowiedź, że pocznie i porodzi Syna. Odpowiedź jest ważna dla Niej samej i dla wszystkich powołanych przez Boga. Boże plany realizują się mocą Ducha Świętego. To On wkracza w życie ludzi i dokonuje dzieł, które przekraczają możliwości ludzkiej natury. Żadne z powołań nie jest możliwe do zrealizowania tylko ludzkimi siłami. Jest w nich bowiem obecne coś, co sięga poza ziemię. Pochodzi z nieba i do nieba prowadzi. Umocnieni Duchem Świętym chrześcijanie podejmują dzieła, które ich przerastają. Najważniejsze z nich to dążenie do świętości, do pełnego zjednoczenia z Bogiem, do pokonania grzechu w swoim życiu. W Maryi to dzieło dokonało się w sposób doskonały. My zaś do tej doskonałości dążymy."
                    android:id="@+id/textView168"
                    style="@style/paragraf_Text_optimum"/>

            <TextView
                    android:text="Dziesiątek różańca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView169"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Kiedy rozpoczynam modlitwę, także tę różańcową, słyszę słowa: „Duch Święty zstąpi na Ciebie”. Tylko w ten sposób mogę autentycznie rozmawiać z Ojcem i zjednoczyć się z Jezusem. Dziękuję Duchowi Świętemu i staram się poddać całkowicie Jego prowadzeniu."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView170"/>


            <TextView
                    android:text="Intencje modlitwy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView171"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Duchu Święty, który zachowałeś Maryję od grzechu pierworodnego i uzdolniłeś Ją do wypełnienia zadań Matki Syna Bożego, udziel i mnie swojej łaski, aby wiernie wypełnił własne powołanie. Proszę o ten dar także dla moich braci i sióstr."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView172"/>

            <TextView
                    android:text="Proszę w intencjach, które poleca Ojciec Święty."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView173"/>
            <TextView
                    android:text="Dziękuję Maryi, a wraz z Nią Bogu, za dar spotkania i za wszystkie otrzymane łaski."
                    android:id="@+id/textView174"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="80sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>