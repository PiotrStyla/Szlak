<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Radosne" android:background="#FFFFFF">

    <TextView
            android:text="@string/tajemnice_radosne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Radosne1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            android:textSize="28sp" android:textColor="#E642A5F5"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp" app:srcCompat="@drawable/ikonaradosna"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Radosne1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:contentDescription="@string/ikona_tajemnica_radosna"/>
    <Button
            android:text="@string/zwiastowanie1"
            android:id="@+id/button_Zwiastowanie"
            style="@style/button_radosne_tajemnice"
            android:layout_width="150sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_Nawiedzenie"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="@string/nawiedzenie1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Nawiedzenie"
            style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button_Zwiastowanie"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="@string/narodzenie1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Narodzenie"
            style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_Ofiarowanie"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_Zwiastowanie"/>
    <Button
            android:text="@string/ofiarowanie1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Ofiarowanie"
            style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button_Narodzenie"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_Narodzenie"/>
    <Button
            android:text="@string/odnalezienie1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_Narodzenie"/>
    <Button
            android:text="@string/rekolekcje1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button9"/>
</android.support.constraint.ConstraintLayout>