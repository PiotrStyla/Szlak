<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#FFFFFF">
    <Button
            android:text="@string/wprowadzenie_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_wprowadzenie"
            android:background="#64B5F6"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button5"/>
    <Button
            android:text="@string/tajemnice_radosne"
            android:gravity="center|bottom"
            android:textSize="10sp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/button2"
            android:background="@drawable/ikonaradosna"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColorLink="#000000"
            android:textColor="#42A5F5"
            tools:ignore="SmallSp" />
    <Button
            android:text="@string/tajemnice_wiat_a"
            android:gravity="center|bottom"
            android:textSize="10sp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/button3"
            android:background="@drawable/ikonaswiatla"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button2"
            android:textColor="#4DB6AC"
            tools:ignore="SmallSp" />
    <Button
            android:text="@string/tajemnice_bolesne"
            android:gravity="center|bottom"
            android:textSize="10sp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/button4"
            android:background="@drawable/ikonabolesna"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:textColor="#E57373"
            tools:ignore="SmallSp" />
    <Button
            android:text="@string/tajemnice_chwalebne"
            android:textSize="10sp"
            android:gravity="center|bottom"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/button5"
            android:background="@drawable/ikonachwalebna"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button4"
            android:textColor="@color/colorGold"
            tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>