<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Radosne" android:background="#FFFFFF">

    <TextView
            android:text="@string/cz_i_radosna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Radosne1"
            android:textSize="24sp" android:textColor="#1E88E5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp" app:srcCompat="@drawable/ikonaradosna"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Radosne1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.129"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:contentDescription="@string/cz_i_radosna"/>
    <Button
            android:text="@string/zwiastowanie"
            android:id="@+id/button_Zwiastowanie"
            style="@style/button_radosne_tajemnice"
            android:layout_width="150sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="@string/nawiedzenie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button6" style="@style/button_radosne_tajemnice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button8"/>
    <Button
            android:text="@string/narodzenie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button7" style="@style/button_radosne_tajemnice"
            app:layout_constraintTop_toBottomOf="@+id/button_Zwiastowanie"
            app:layout_constraintBottom_toTopOf="@+id/button9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="@string/ofiarowanie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button8" style="@style/button_radosne_tajemnice"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintBottom_toTopOf="@+id/button10" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="@string/odnalezienie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button9" style="@style/button_radosne_tajemnice"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/button7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
    />
    <Button
            android:text="@string/rekolekcje"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button10" style="@style/button_radosne_tajemnice"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/button8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
    />
</android.support.constraint.ConstraintLayout>