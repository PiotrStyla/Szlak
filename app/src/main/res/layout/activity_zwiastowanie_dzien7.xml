<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="DZIEŃ 7. Pan z Tobą"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView107"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView107"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Anioł mówi do Maryi: „Pan z Tobą”. Pełnia łaski, którą cieszyła się Maryja, oznaczała szczególną obecność Boga w Jej życiu.”."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView108"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="Modlitwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView109"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>
            <TextView
                    android:text="Boże, mój Ojcze, niech Pocieszyciel, Duch Święty, który pochodzi od Ciebie, oświeci mój umysł i doprowadzi mnie do pełnej prawdy, zgodnie z obietnicą Twego Syna."
                    android:id="@+id/textView110"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="Rozważanie słowa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView111"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Z Ewangelii według św. Łukasza (1,28): „Anioł wszedł do Niej i rzekł: Bądź pozdrowiona, pełna łaski, Pan z Tobą, błogosławiona jesteś między niewiastami”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView112"/>
            <TextView
                    android:text="W Starym Testamencie Bóg wielokrotnie zwracał się do swoich wybranych słowami: „Ja jestem z Tobą”. Prorok Jeremiasz usłyszał zapewnienie (1,8.18-19): „Nie lękaj się ich, bo jestem z tobą, by cię chronić - wyrocznia Pana. Oto Ja czynię cię dzisiaj twierdzą warowną, kolumną żelazną i murem spiżowym przeciw całej ziemi, przeciw królom judzkim i ich przywódcom, ich kapłanom i ludowi tej ziemi.	 Będą walczyć przeciw tobie, ale nie zdołają cię zwyciężyć, gdyż Ja jestem z tobą - wyrocznia Pana - by cię ochraniać”. Podobne zapewnienie słyszeli inni prorocy. "
                    android:id="@+id/textView113"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Bóg, który powołuje i powierza człowiekowi określone zadania, ofiarowuje mu również dar swojej szczególnej obecności i opieki. Również Maryja w chwili zwiastowania słyszy zapewnienie, że Bóg jest z Nią. Uczestnicy Eucharystii słyszą aż cztery razy słowa, które wypowiada kapłan: „Pan z wami”. Rozważając tajemnicę różańca chcę z Maryją jeszcze głębiej doświadczyć obecności Pana."
                    android:id="@+id/textView114"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Dziesiątek różańca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView115"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Świadomość obecności Boga jest szczególnie intensywna w czasie modlitwy. Wtedy rozmawiam z Bogiem, stoję lub klęczę przed Nim. Wpatruję się oczyma wiary w Niego. Ta prawda przenika jeszcze bardziej moją dzisiejszą modlitwę."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView116"/>


            <TextView
                    android:text="Intencje modlitwy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView117"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Nie pozwól, Panie, abym kiedykolwiek zapomniał o Twojej obecności przy mnie. Wierzę, że jesteś ze mną w każdej chwili. Proszę Cię o ten dar także dla wszystkich moich braci i sióstr."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView118"/>

            <TextView
                    android:text="Proszę w intencjach, które poleca Ojciec Święty."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView119"/>
            <TextView
                    android:text="Dziękuję Maryi, a wraz z Nią Bogu, za dar spotkania i za wszystkie otrzymane łaski."
                    android:id="@+id/textView120"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="50sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>