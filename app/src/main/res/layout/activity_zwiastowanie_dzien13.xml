<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        tools:context=".Wprowadzenie"
        android:id="@+id/linearLayout">
    <TextView
            android:text="Dzień 13. Tajemnica Pełni w Starym Przymierzu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView202"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4sp"
            android:paddingEnd="10sp"
            android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView188"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp"
            android:layout_marginTop="72dp"
            android:paddingTop="10sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/modlitwa"
                    android:id="@+id/textView203"
                    style="@style/modlitwa"/>
            <TextView
                    android:text="@string/bo_e_m_j_ojcze_niech_pocieszyciel_duch_wi_ty_kt_ry_pochodzi_od_ciebie_o_wieci_m_j_umys_i_doprowadzi_mnie_do_pe_nej_prawdy_zgodnie_z_obietnic_twego_syna"
                    android:id="@+id/textView204"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="@string/rozwa_anie_s_owa"
                    android:id="@+id/textView205"
                    style="@style/rozwazanie_slowa"/>

            <TextView
                    android:text="Z Ewangelii według św. Łukasza (24, 25-27): „Jezus rzekł do nich: «O nierozumni, jak nieskore są wasze serca do wierzenia we wszystko, co powiedzieli prorocy! Czyż Mesjasz nie miał tego cierpieć, aby wejść do swej chwały?» I zaczynając od Mojżesza poprzez wszystkich proroków wykładał im, co we wszystkich Pismach odnosiło się do Niego”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView206"/>
            <TextView
                    android:text="Wszystko, co dokonało się w dziele stworzenia, jest ukierunkowane na Chrystusa. Wszystko także, co dokonało się w Starym Testamencie nabiera właściwego znaczenia w Chrystusie. Historia narodu wybranego, na każdym jej etapie, zapowiada i przygotowuje dzieło zbawienia, którego dokona oczekiwany Mesjasz. "
                    android:id="@+id/textView207"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Pobożni Izraelici z wiarą oczekiwali spełnienia obietnic Pana. Nikt jednak tak na Niego nie czekał i tak Go nie wyglądał jak Maryja. Ona była pewnego rodzaju ucieleśnieniem tego tęsknego wyczekiwania Mesjasza. Niezachwianie wierzyła, że Bóg prowadzi swój lud i spełnia swoje obietnice. Rozważając dziesiątek różańca chcę budzić w sobie pragnienie spotkania ze Zbawicielem i wiarę w to, że spełnia On wszystkie swoje obietnice."
                    android:id="@+id/textView208"
                    style="@style/paragraf_Text_optimum"/>

            <TextView
                    android:text="@string/dziesi_tek_r_a_ca"
                    android:id="@+id/textView209"
                    style="@style/dziesiatek_rozanca"/>

            <TextView
                    android:text="...\n"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView210"/>

            <TextView
                    android:text="@string/intencje_modlitwy"
                    android:id="@+id/textView211"
                    style="@style/intencje_modlitwy"/>

            <TextView
                    android:text="...\n"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView212"/>

            <TextView
                    android:text="@string/prosz_w_intencjach_kt_re_poleca_ojciec_wi_ty"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView213"/>
            <TextView
                    android:text="@string/dzi_kuj_maryi_a_wraz_z_ni_bogu_za_dar_spotkania_i_za_wszystkie_otrzymane_aski"
                    android:id="@+id/textView214"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="80sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>