<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="DZIEŃ 4. Modlitwa do Maryi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView77"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView77"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Różaniec jest modlitwą, którą przeżywam z Maryją. Pragnę doświadczać Jej obecności i Jego prowadzenia. Ona najlepiej rozeznawała wolę Bożą i najgłębiej kontemplowała tajemnice zbawienia. "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView78"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="Modlitwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView79"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>
            <TextView
                    android:text="Dziękuję Ci, Maryjo, najlepsza Matko, za wszelkie dary, jakie dla mnie wypraszasz u Boga. Dziękuję Ci za przykład wiary i miłości, jaki dajesz całym swoim życiem. Pragnę Cię naśladować. Bądź ze mną dziś, gdy spojrzeniem wiary ogarniam wszystko, co dokonało się wtedy, gdy Bóg posłał do Ciebie Anioła Gabriela. Bądź ze mną, gdy w kolejnych dniach będę bardziej szczegółowo rozważał to zbawcze misterium. Ucz mnie poznawać wolę Ojca i wiernie ją wypełniać."
                    android:id="@+id/textView80"
                    style="@style/paragraf_Text"/>
            <TextView
                    android:text="Rozważanie słowa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView81"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Z Księgi Rodzaju (3,15): „Wprowadzam nieprzyjaźń między ciebie a niewiastę, pomiędzy potomstwo twoje a potomstwo jej: ono zmiażdży ci głowę, a ty zmiażdżysz mu piętę”. "
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView82"/>
            <TextView
                    android:text="Już na początku ludzkiej historii Bóg mówi o niewieście, która w żaden sposób nie ulegnie kusicielowi. Kościół widzi w niej Maryję. Ona została zachowana od grzechu pierworodnego. W wolności od grzechu trwała przez całe życie. Otaczało ją światło Boże. Była całkowicie przeniknięta łaską. W Nią się wpatruję odmawiając dziś dziesiątek różańca. Pragnę jeszcze wyraźniej zobaczyć boskie piękno, które ją przenika, czystą miłość, którą kocha Ona Boga i ludzi, pełną wolność w przyjęciu woli Bożej. "
                    android:id="@+id/textView83"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Dziesiątek różańca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView84"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="W Starym Testamencie Bóg wiele razy nazywał się Ojcem. Nikt lepiej od Maryi nie rozumiał głębi tej dziecięcej relacji z Bogiem. W zjednoczeniu z Nią pragnę wołać: „Ojcze nasz”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView85"/>


            <TextView
                    android:text="Dziś w odmawianiu kolejnych „Zdrowaś Maryjo” pragnę skupić się przede wszystkim na samej Maryi, na Jej otwartości, czystości serca, miłości. "
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView86"/>
            <TextView
                    android:text="Ta, która mówiła: „Wielbi dusza moja Pana” pomaga mi modlić się słowami „Chwała Ojcu...”"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView87"/>
            <TextView
                    android:text="Intencje modlitwy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView88"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Świadom, że Maryja, moja niebieska Matka, nieustannie wstawia się za mną i za wszystkimi swoimi dziećmi, proszę Boga z tym większą wiarą o potrzebne łaski."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView89"/>

            <TextView
                    android:text="Proszę najpierw o łaskę głębokiej, dziecięcej ufności do Maryi, dla mnie i dla innych ludzi."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView90"/>
            <TextView
                    android:text="Proszę w intencjach, które poleca Ojciec Święty."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView91"/>
            <TextView
                    android:text="Dziękuję Maryi, a wraz z Nią Bogu, za dar spotkania i za wszystkie otrzymane łaski."
                    android:id="@+id/textView92"
                    style="@style/paragraf_Text_optimum"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
