            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/je_li_mam_przez_ca_y_miesi_c_udawa_si_duchowo_do_miejsca_w_kt_rym_dokona_o_si_zwiastowanie_naj_wi_tszej_maryi_pannie_spotka_si_tam_z_chrystusem_i_maryj_to_najpierw_musz_si_gorliwie_modli_o_ask_takiego_prze_ywania_tej_tajemnicy_nie_potrafi_o_w_asnych_si_ach_wnikn_w_g_bi_bo_ych_spraw_potrzebuj_prowadzenia_przez_boga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="@string/z_tej_racji_pierwsze_dni_miesi_cznej_modlitwy_i_medytacji_s_pro_b_o_ask_g_bszego_wnikni_cia_w_znaczenie_zbawczych_wydarze_jakie_dokona_y_si_w_chwili_gdy_anio_przyszed_do_maryi_i_oznajmi_jej_bo_wol"
                    android:id="@+id/textView7"
                    style="@style/paragraf_Text"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
