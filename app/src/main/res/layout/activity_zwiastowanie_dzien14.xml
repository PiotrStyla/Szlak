<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="Dzień 14. Pełnia czasu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView215"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView215"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/modlitwa"
                    android:id="@+id/textView216"
                    style="@style/modlitwa"/>
            <TextView
                    android:text="@string/bo_e_m_j_ojcze_niech_pocieszyciel_duch_wi_ty_kt_ry_pochodzi_od_ciebie_o_wieci_m_j_umys_i_doprowadzi_mnie_do_pe_nej_prawdy_zgodnie_z_obietnic_twego_syna"
                    android:id="@+id/textView217"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="@string/rozwa_anie_s_owa"
                    android:id="@+id/textView218"
                    style="@style/rozwazanie_slowa"/>

            <TextView
                    android:text="Z listu św. Pawła Apostoła do Galatów (4,4-5): „Gdy nadeszła pełnia czasu, zesłał Bóg Syna swego, zrodzonego z niewiasty, zrodzonego pod Prawem, aby wykupił tych, którzy podlegali Prawu, abyśmy mogli otrzymać przybrane synostwo”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView219"/>
            <TextView
                    android:text="Ojciec Święty Jan Paweł II od tych właśnie słów rozpoczyna swoją encyklikę o „Redemptoris Mater”. Są to więc szczególnie ważne słowa, do których warto wracać. „Ta «pełnia» – pisze Ojciec Święty – wskazuje na wyznaczony odwiecznie moment, w którym Ojciec posłał Syna swego, «aby każdy, kto w Niego wierzy, nie zginął, ale miał życie wieczne» (J 3,16). Oznacza ona błogosławioną chwilę, w której Słowo, które było u Boga, «stało się ciałem i zamieszkało wśród nas» (J 1,1.14), stając się naszym bratem” (RM 1). "
                    android:id="@+id/textView220"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Wszystko, co ziemia mogła przygotować na przyjście Mesjasza, zostało dokonane. Wszystko w historii zbawienia, co miało poprzedzać przewidziany odwiecznie przez Boga moment Wcielenia, wypełniło się. Nadszedł moment najważniejszy w historii. Syn Boży staje się człowiekiem. Wszechmocny Bóg przyjmuje ludzką postać. Prawda ta rodzi pełnię mojego zdumienia, zachwytu i wdzięczności. Rozważam ją z Maryją."
                    android:id="@+id/textView221"
                    style="@style/paragraf_Text_optimum"/>

            <TextView
                    android:text="@string/dziesi_tek_r_a_ca"
                    android:id="@+id/textView222"
                    style="@style/dziesiatek_rozanca"/>

            <TextView
                    android:text="...\n"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView223"/>

            <TextView
                    android:text="@string/intencje_modlitwy"
                    android:id="@+id/textView224"
                    style="@style/intencje_modlitwy"/>

            <TextView
                    android:text="...\n"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView225"/>

            <TextView
                    android:text="@string/prosz_w_intencjach_kt_re_poleca_ojciec_wi_ty"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView226"/>
            <TextView
                    android:text="@string/dzi_kuj_maryi_a_wraz_z_ni_bogu_za_dar_spotkania_i_za_wszystkie_otrzymane_aski"
                    android:id="@+id/textView227"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="80sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>