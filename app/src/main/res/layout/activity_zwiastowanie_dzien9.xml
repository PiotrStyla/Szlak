<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="DZIEŃ 9. Poczniesz i porodzisz Syna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView148"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView107"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Po raz kolejny wracam do nazaretańskiego domu, gdzie Maryja rozmawia z Aniołem. Nie jestem tylko biernym obserwatorem. Słowa Anioła dotyczą nie tylko Maryi, lecz są przesłaniem dla wszystkich ludzi. Postawa Maryi jest przykładem dla powołanych."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView149"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="Modlitwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView150"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>
            <TextView
                    android:text="Boże, mój Ojcze, niech Pocieszyciel, Duch Święty, który pochodzi od Ciebie, oświeci mój umysł i doprowadzi mnie do pełnej prawdy, zgodnie z obietnicą Twego Syna."
                    android:id="@+id/textView151"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="Rozważanie słowa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView152"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Z Ewangelii według św. Łukasza (1,31-33): „Anioł rzekł do Maryi: Oto poczniesz i porodzisz Syna, któremu nadasz imię Jezus. Będzie On wielki i będzie nazwany Synem Najwyższego, a Pan Bóg da Mu tron Jego praojca, Dawida. Będzie panował nad domem Jakuba na wieki, a Jego panowaniu nie będzie końca”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView153"/>
            <TextView
                    android:text="Powołanie Maryi dotyczy Jezusa, który jest Synem Najwyższego. Ma zostać Jego Matką. Jako Matka będzie przez całe życie odkrywać, kim jest Jej Syn. Słowa, które słyszy od Anioła, będą nabierać coraz głębszego znaczenia w miarę upływu lat i wypełniania przez Jezusa Jego misji. Nadane Mu zostanie imię, będzie nazywał Boga Ojcem, objawi swoją wielkość, obejmie panowanie nad domem Jakuba."
                    android:id="@+id/textView154"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Maryja ma przyjąć Syna Najwyższego w swoje zwyczajne ziemskie życie i oddać się całkowicie Jemu. W powołaniu Maryi odnajdujemy pierwowzór wszystkich powołań. W każdym z nich chodzi najpierw o to, aby przyjąć Syna Bożego w swoje życie i Jemu się całkowicie oddać. Różne są zewnętrzne kształty powołania, różnorodne są charyzmaty i posługi, które Bóg nam powierza, ale to, co najważniejsze, jest wspólne. Jesteśmy powołani do przyjęcia Boga w swoje życie i zjednoczenia z Nim więzami najgłębszej miłości."
                    android:id="@+id/textView155"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Dziesiątek różańca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView156"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Codzienne odmawianie dziesiątka różańca ma w sobie coś z maryjnego wędrowania dzień po dniu z Jezusem. Większość tych dni nie wyróżnia się niczym szczególnym. Ich wielkością, pięknem i nadzwyczajnością jest obecność Pana. Chcę tę prawdę coraz głębiej przeżywać."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView157"/>


            <TextView
                    android:text="Intencje modlitwy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView158"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Duchu Święty, który zachowałeś Maryję od grzechu pierworodnego i uzdolniłeś Ją do wypełnienia zadań Matki Syna Bożego, udziel i mnie swojej łaski, aby wiernie wypełnił własne powołanie. Proszę o ten dar także dla moich braci i sióstr."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView159"/>

            <TextView
                    android:text="Proszę w intencjach, które poleca Ojciec Święty."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView160"/>
            <TextView
                    android:text="Dziękuję Maryi, a wraz z Nią Bogu, za dar spotkania i za wszystkie otrzymane łaski."
                    android:id="@+id/textView161"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="80sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>