<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        tools:context=".Wprowadzenie"
        android:id="@+id/linearLayout">
    <TextView
            android:text="DZIEŃ 25 Słowo Ciałem Się Stało - Łaska Po Łasce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView360"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4sp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingEnd="10sp"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView360"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="78dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/modlitwa"
                    android:id="@+id/textView361"
                    style="@style/modlitwa"/>
            <TextView
                    android:text="@string/bo_e_m_j_ojcze_niech_pocieszyciel_duch_wi_ty_kt_ry_pochodzi_od_ciebie_o_wieci_m_j_umys_i_doprowadzi_mnie_do_pe_nej_prawdy_zgodnie_z_obietnic_twego_syna"
                    android:id="@+id/textView362"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="@string/rozwa_anie_s_owa"
                    android:id="@+id/textView363"
                    style="@style/rozwazanie_slowa"/>

            <TextView
                    android:text="Z Ewangelii według św. Jana (1,16-18): „Z Jego pełności wszyscyśmy otrzymali - łaskę po łasce. Podczas gdy Prawo zostało nadane przez Mojżesza, łaska i prawda przyszły przez Jezusa Chrystusa. Boga nikt nigdy nie widział, Ten Jednorodzony Bóg, który jest w łonie Ojca, o Nim pouczył”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView364"/>
            <TextView
                    android:text="Kończąc kolejny tydzień mojego pobytu w Nazarecie, w codziennym medytowaniu nad tajemnicą Zwiastowania Najświętszej Maryi Pannie i tajemnicą Wcielenia Syna Bożego, dziękuję Bogu za wszystkie otrzymane dary. Potrzebuję ich każdego dnia i we wszystkich okolicznościach życia. "
                    android:id="@+id/textView365"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="„Z Jego pełności wszyscyśmy otrzymali łaskę po łasce”. Bóg wie, jakiej łaski potrzebuję dziś i jakiej będę potrzebował jutro. Jego miłość sprawia, że otrzymuję dar światła, bym nie błądził w ciemnościach, dar wolności, bym nie trwał w uzależnieniach, dar modlitwy, bym chętnie rozmawiał z Ojcem niebieskim, dar pokory, bym się nie wynosił nad innych, dar miłości i wszystkie inne dary, dzięki którym upodabniam się do Jezusa Chrystusa."
                    android:id="@+id/textView366"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Dziękuję Maryi, która każdego dnia przyjmuje mnie w swoim nazaretańskim domu i wprowadza w tajemnice swoje i swojego Syna, Odkupiciela człowieka. "
                    android:id="@+id/textView367"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="@string/dziesi_tek_r_a_ca"
                    android:id="@+id/textView368"
                    style="@style/dziesiatek_rozanca"/>

            <TextView
                    android:text="@string/n"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView369"/>

            <TextView
                    android:text="@string/intencje_modlitwy"
                    android:id="@+id/textView370"
                    style="@style/intencje_modlitwy"/>

            <TextView
                    android:text="@string/n"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView371"/>

            <TextView
                    android:text="@string/prosz_w_intencjach_kt_re_poleca_ojciec_wi_ty"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView372"/>
            <TextView
                    android:text="@string/dzi_kuj_maryi_a_wraz_z_ni_bogu_za_dar_spotkania_i_za_wszystkie_otrzymane_aski"
                    android:id="@+id/textView373"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="80sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>