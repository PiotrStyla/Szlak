<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Zwiastowanie" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/tajemnica_i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                    android:textSize="18sp" android:textColor="#039BE5" android:textAlignment="center"
                    android:typeface="sans"/>
            <TextView
                    android:text="@string/zwiastowanie_naj_wi_tszej"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:textSize="18sp"
                    android:textColor="#039BE5" android:textAlignment="center"/>
            <TextView
                    android:text="@string/marii_pannie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:textColor="#039BE5" android:textSize="18sp"
                    android:textAlignment="center"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/zwiastowanie_obraz"
                    android:id="@+id/imageView3"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/obrazzwiastowania"/>
            <Button
                    android:text="@string/wst_p"
                    android:id="@+id/button_Zwiastowanie_Wstep"
                    style="@style/button_Zwiastowanie_Wstep" android:layout_marginBottom="12dp"/>
            <Button
                    android:text="@string/dzie_1_modlitwa_do_ojca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button27"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:text="@string/dzie_2_modlitwa_do_syna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button24"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:text="@string/dzie_3_modlitwa_do_ducha_wi_tego"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button25"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:text="@string/dzie_4_modlitwa_do_maryi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button26"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:text="@string/dzie_5_anio_pa_ski"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button33"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:text="@string/dzie_6_pe_na_aski"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button28"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:text="@string/dzie_7_pan_z_tob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button29"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:text="@string/dzie_8_nie_b_j_si_maryjo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button30"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:text="@string/dzie_9_poczniesz_i_porodzisz_syna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button31"
                    style="@style/button_dni_zwiastowanie_padding"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button32"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="@string/dzie_10_duch_zst_pi_na_ciebie"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button34"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 11. Niech mi się stanie"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button35"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 12. Przed założeniem świata"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button36"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 13. W Starym Przymierzu"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button37"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 14. Pełnia czasu"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button38"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 15. Cała Pełnia"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button39"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 16. Pełnia darów"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button40"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 17. Napełnieni Pełnią"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button41"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 18. Dar wzrostu"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button42"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 19. Na początku było Słowo"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button43"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 20. Bogiem Było Słowo"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button44"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 21. Stało się Ciałem"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button45"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 22. Świat Go nie poznał"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button46"
                    style="@style/button_dni_zwiastowanie_padding"
                    android:text="DZIEŃ 23. Ci, którzy Go nie przyjęli"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>