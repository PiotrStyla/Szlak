<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Radosne">

    <TextView
            android:text="Część I - Radosna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Radosne1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
            android:textSize="30sp" android:textColor="#1E88E5"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ikonaradosna"
            android:id="@+id/imageView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Radosne1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Zwiastowanie"
            android:id="@+id/button_Zwiastowanie"
            style="@style/button_radosne_tajemnice"
            android:layout_width="150sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button6"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="Nawiedzenie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button6" style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button_Zwiastowanie" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="Narodzenie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button7" style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button8"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/button_Zwiastowanie"/>
    <Button
            android:text="Ofiarowanie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button8" style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button7" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/button7"/>
    <Button
            android:text="Odnalezienie"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button9" style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button10"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/button7"/>
    <Button
            android:text="Rekolekcje"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button10" style="@style/button_radosne_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button9"/>
</android.support.constraint.ConstraintLayout>