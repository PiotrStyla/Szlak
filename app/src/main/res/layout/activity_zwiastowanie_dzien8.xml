<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="DZIEŃ 8. Nie bój się Maryjo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView134"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textStyle="bold"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView107"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Choć Maryja była pełna łaski i doświadczała szczególnej obecności Pana w swoim życiu, to jednak w chwili Zwiastowania słyszy słowa: „Nie bój się”. Widocznie lęk wkradał się do Jej serca."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView135"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp" android:textAlignment="textStart"/>
            <TextView
                    android:text="Modlitwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView136"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>
            <TextView
                    android:text="Boże, mój Ojcze, niech Pocieszyciel, Duch Święty, który pochodzi od Ciebie, oświeci mój umysł i doprowadzi mnie do pełnej prawdy, zgodnie z obietnicą Twego Syna."
                    android:id="@+id/textView137"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="Rozważanie słowa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView138"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Z Ewangelii według św. Łukasza (1,29-30): „Maryja zmieszała się na te słowa i rozważała, co miałoby znaczyć to pozdrowienie. Lecz anioł rzekł do Niej: «Nie bój się, Maryjo, znalazłaś bowiem łaskę u Boga”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView139"/>
            <TextView
                    android:text="Gdy człowiek jest zaskoczony czymś nowym i wielkim, zazwyczaj przeżywa chwile zmieszania i niepewności. Maryja jest niewątpliwie zdumiona widokiem Anioła i usłyszanymi słowami. Ewangelista mówi, że była „zmieszana”. W innych tłumaczeniach czytamy, że była „zatrwożona”. Potrzebne więc było wyjaśnienie. Potrzebne były również słowa: „Nie bój się”. "
                    android:id="@+id/textView140"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Stajemy tu wobec tajemnicy powołania. Jest ono czymś wielkim, gdyż pochodzi od samego Boga i jest zaproszeniem do udziału w realizacji Jego zbawczego planu wobec ludzi. Każdy powołany doświadcza w swoim życiu wątpliwości i niepokojów, zagrożeń i lęków. Chrystus wielokrotnie mówił do Apostołów: „Nie lękajcie się”. Słowa te powtarzał od początku swego pontyfikatu św. Jan Paweł II. "
                    android:id="@+id/textView141"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Dziesiątek różańca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView142"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Wszyscy, którzy głęboko przeżywają modlitwę, mówią, że doświadczają również uspokojenia. Boży pokój pokonuje lęk i pomnaża zaufanie do Boga, który dając powołanie, daje też siły do jego wypełnienia. W ten świat pokoju pragnę głębiej wejść w dzisiejszej modlitwie różańcowej."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView143"/>


            <TextView
                    android:text="Intencje modlitwy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView144"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" android:textStyle="bold"/>

            <TextView
                    android:text="Pomóż mi, Panie, pokonywać wszelkie lęki mojego życia. Broń mnie przez nerwowością, brakiem zaufania do Ciebie, zapomnieniem o Twojej obecności. Pomóż mnie i wszystkim ludziom usłyszeć Twoje słowa: „Nie lękajcie się”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView145"/>

            <TextView
                    android:text="Proszę w intencjach, które poleca Ojciec Święty."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView146"/>
            <TextView
                    android:text="Dziękuję Maryi, a wraz z Nią Bogu, za dar spotkania i za wszystkie otrzymane łaski."
                    android:id="@+id/textView147"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="80sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeStepGranularity="2sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>