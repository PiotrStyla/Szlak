            <TextView
                    android:text="@string/chrystusowe_przypowie_ci_i_kr_lestwie_bo_ym_a_tak_e_jego_wezwanie_do_nawr_cenia_s_cz_sto_przypominane_w_liturgii_ko_cio_a_stale_wi_c_do_nich_wracam"
