<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Swiatla"
        android:background="#FFFFFF">

    <TextView
            android:text="@string/tajemnice_wiat_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Radosne1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:textSize="28sp"
            android:textColor="@color/colorGreen"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/ikonaswiatla"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Radosne1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/ikona_tajemnica_radosna"/>
    <Button
            android:text="@string/jordan"
            android:id="@+id/button_Jordan"
            style="@style/button_swiatla_tajemnice"
            android:layout_width="150sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_Kana"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="@string/kana"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Kana"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button_Jordan"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="@string/galilea"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Galilea"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_Ofiarowanie"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_Jordan"/>
    <Button
            android:text="@string/ofiarowanie1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Ofiarowanie"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button_Galilea"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_Galilea"/>
    <Button
            android:text="@string/odnalezienie1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Odnalezienie"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_Rekolekcje_Radosne"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_Galilea"/>
    <Button
            android:text="@string/rekolekcje1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Rekolekcje_Radosne"
            style="@style/button_swiatla_tajemnice"
            app:layout_constraintStart_toEndOf="@+id/button_Odnalezienie"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_Odnalezienie"/>
</android.support.constraint.ConstraintLayout>