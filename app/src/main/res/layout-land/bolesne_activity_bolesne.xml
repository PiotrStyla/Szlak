<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Bolesne"
android:background="#FFFFFF">

<TextView
        android:text="@string/tajemnice_bolesne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Bolesne1"
        android:textSize="20sp"
        android:textColor="@color/colorRed"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"/>
<ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/ikonabolesna"
        android:id="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_Bolesne1"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.129"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/ikona_bolesna_obraz" />
<Button
        android:text="@string/ogr_jec"
        android:id="@+id/button_Ogrojec"
        style="@style/button_bolesne_tajemnice"
        android:layout_width="150sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_Cierniem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"/>
<Button
        android:text="@string/biczowanie"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/button_Biczowanie"
        style="@style/button_bolesne_tajemnice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toTopOf="@+id/button_Droga"/>
<Button
        android:text="@string/ukoronowanie"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/button_Cierniem"
        style="@style/button_bolesne_tajemnice"
        app:layout_constraintTop_toBottomOf="@+id/button_Ogrojec"
        app:layout_constraintBottom_toTopOf="@+id/button_Ukrzyzowanie"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"/>
<Button
        android:text="@string/droga_krzyzowa"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/button_Droga"
        style="@style/button_bolesne_tajemnice"
        app:layout_constraintTop_toBottomOf="@+id/button_Biczowanie"
        app:layout_constraintBottom_toTopOf="@+id/button_Rekolekcje_Radosne"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"/>
<Button
        android:text="@string/ukrzy_owanie"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/button_Ukrzyzowanie"
        style="@style/button_bolesne_tajemnice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Cierniem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        />
<Button
        android:text="@string/rekolekcje"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/button_Rekolekcje_Radosne"
        style="@style/button_bolesne_tajemnice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Droga"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>