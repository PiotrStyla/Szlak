<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        tools:context=".Wprowadzenie" android:id="@+id/linearLayout">
    <TextView
            android:text="Dzień 15. Tajemnica Pełni - Cała Pełnia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView228"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:lineSpacingExtra="4sp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingEnd="10sp"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView228"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="72dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:paddingStart="8sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/modlitwa"
                    android:id="@+id/textView229"
                    style="@style/modlitwa"/>
            <TextView
                    android:text="@string/bo_e_m_j_ojcze_niech_pocieszyciel_duch_wi_ty_kt_ry_pochodzi_od_ciebie_o_wieci_m_j_umys_i_doprowadzi_mnie_do_pe_nej_prawdy_zgodnie_z_obietnic_twego_syna"
                    android:id="@+id/textView230"
                    style="@style/paragraf_Text"/>

            <TextView
                    android:text="@string/rozwa_anie_s_owa"
                    android:id="@+id/textView231"
                    style="@style/rozwazanie_slowa"/>

            <TextView
                    android:text="Z listu św. Pawła Apostoła do Kolosan (1,19-20. 2,9): „Zechciał bowiem Bóg, aby w Nim zamieszkała cała Pełnia, i aby przez Niego znów pojednać wszystko z sobą: przez Niego - i to, co na ziemi, i to, co w niebiosach, wprowadziwszy pokój przez krew Jego krzyża. W Nim bowiem mieszka cała Pełnia: Bóstwo, na sposób ciała”."
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView232"/>
            <TextView
                    android:text="Kiedy w Chrystusie zamieszkała „cała Pełnia, Bóstwo na sposób ciała”? Nie mamy wątpliwości, że Chrystus zjednoczył w sobie pełnię Bóstwa z pełnią Człowieczeństwa w pierwszej chwili swego poczęcia. Choć w początkowym okresie ziemskiego życia Jego ludzkie ciało dopiero się formowało w łonie Matki, to jednak od początku „mieszkała w Nim cała Pełnia: Bóstwo na sposób ciała”. "
                    android:id="@+id/textView233"
                    style="@style/paragraf_Text_optimum"/>
            <TextView
                    android:text="Odmawiając dziesiątek różańca chcę wyznać wiarę w tę prawdę i w tej wierze się umocnić. Chcę oddać cześć Jezusowi już w pierwszej chwili Jego ziemskiej wędrówki, gdy jest jeszcze mały i niewidoczny jak każde poczęte dziecko. Chcę wyznać, że w momencie, w którym Bóg stał się Człowiekiem, wszystko na świecie się zmieniło. Zmieniło się przez sam fakt obecności Boga w ludzkiej postaci. Ludzie jeszcze o tym nie wiedzieli, ale cud Wcielenia już się dokonał."
                    android:id="@+id/textView234"
                    style="@style/paragraf_Text_optimum"/>

            <TextView
                    android:text="@string/dziesi_tek_r_a_ca"
                    android:id="@+id/textView235"
                    style="@style/dziesiatek_rozanca"/>

            <TextView
                    android:text="...\n"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView236"/>

            <TextView
                    android:text="@string/intencje_modlitwy"
                    android:id="@+id/textView237"
                    style="@style/intencje_modlitwy"/>

            <TextView
                    android:text="...\n"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView238"/>

            <TextView
                    android:text="@string/prosz_w_intencjach_kt_re_poleca_ojciec_wi_ty"
                    style="@style/paragraf_Text_optimum"
                    android:id="@+id/textView239"/>
            <TextView
                    android:text="@string/dzi_kuj_maryi_a_wraz_z_ni_bogu_za_dar_spotkania_i_za_wszystkie_otrzymane_aski"
                    android:id="@+id/textView240"
                    style="@style/paragraf_Text_optimum"
                    android:paddingBottom="80sp"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>